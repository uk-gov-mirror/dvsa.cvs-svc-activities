{
  "name": "cvs-svc-activities",
  "version": "0.0.1",
  "description": "A template application containing boilerplate code for writing CVS microservices.",
  "main": "handler.js",
  "scripts": {
    "start": "npm run tslint && npm run build:dev && BRANCH=local node_modules/serverless/bin/serverless offline start",
    "build": "node_modules/typescript/bin/tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:dev": "node_modules/typescript/bin/tsc && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": "BRANCH=local SLS_DEBUG=* AWS_XRAY_CONTEXT_MISSING=LOG_ERROR jest --testMatch=\"**/*.unitTest.ts\" --coverage",
    "test-i": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\" --runInBand",
    "prepush": "BRANCH=local npm test && npm run tslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "tslint": "tslint --fix src/**/*.ts tests/**/*.ts",
    "sonar-scanner": "npm run tslint && npm run coverage && sonar-scanner",
    "coverage": "BRANCH=local SLS_DEBUG=* jest --testMatch=\"**/*.*Test.ts\" --runInBand --coverage",
    "audit-dep": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME}/ && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci --production && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip .",
    "tools-setup": "sls dynamodb migrate && BRANCH=local node_modules/gulp/bin/gulp.js start-serverless && sls dynamodb seed --seed=activities"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-lambda": "^1.0.5",
    "aws-sdk": "^2.640.0",
    "aws-xray-sdk": "^2.5.0",
    "date-fns": "^1.30.1",
    "joi": "^14.3.1",
    "node-yaml": "^3.2.0",
    "path-parser": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-register": "^1.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.34",
    "@types/jest": "^24.0.21",
    "@types/jest-plugin-context": "^2.9.2",
    "@types/joi": "^14.3.4",
    "@types/lambda-tester": "^3.6.0",
    "@types/node": "^12.12.5",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "audit-filter": "^0.5.0",
    "aws-lambda-mock-context": "^3.2.1",
    "gulp": "^4.0.2",
    "husky": "^3.1.0",
    "jest": "^25.5.4",
    "jest-plugin-context": "^2.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "lambda-tester": "^3.6.0",
    "serverless": "^1.73.1",
    "serverless-dynamodb-local": "0.2.39",
    "serverless-offline": "^5.12.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.4.0",
    "ts-jest": "^25.5.1",
    "tslint": "^6.1.0",
    "tslint-jsdoc-rules": "^0.2.0",
    "typescript": "^3.8.3"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "testURL": "http://localhost"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prepush && npm run security-checks",
      "pre-push": "npm run prepush"
    }
  }
}
